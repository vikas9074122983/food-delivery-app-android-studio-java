<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="user.usersetting">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/upapp_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/uptoolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/upclose_settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upapp_bar_settings">
        <RelativeLayout
            android:id="@+id/upprl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/up_profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/firsticon"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/update_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/up_profile_image"
                android:layout_alignEnd="@+id/up_profile_image"
                android:layout_marginTop="-55dp"
                android:layout_marginEnd="26dp"
                android:backgroundTint="#673AB7"
                android:src="@drawable/ic_baseline_camera_alt_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/up_profile_image"
                android:id="@+id/upllb">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="#232222"
                        android:textSize="15dp" />
                    <EditText
                        android:id="@+id/up_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Full Name..."
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="#232222"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/up_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/up_full_name"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:hint="Phone Number.."
                        android:textColor="#000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="#232222"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/up_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/up_phone"
                        android:hint="Address..."
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City Name"
                        android:textColor="#232222"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/up_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/up_phone"
                        android:hint="City..."
                        android:padding="5dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/upllb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="20dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/savebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:background="@drawable/input_design"
                    android:backgroundTint="@color/colorPrimary"/>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>